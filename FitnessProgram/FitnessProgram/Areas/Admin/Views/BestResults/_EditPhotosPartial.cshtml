@model List<BestResultPhoto>

<div class="buttons-container">
    <a onclick="Hide()" class="btn-danger a-custom">X</a>
    @if (Model.Count > 0)
    {
        <a id="delete-all-btn" onclick="RemoveAll('@Model[0].BestResultId')" class="btn-danger float-end delete-all">Delete All</a>
    }
</div>

<div class="table-section">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">File name</th>
                <th scope="col">File</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody id="table">
            @foreach (var photo in Model)
            {
                <tr data-id="@photo.Id">
                    <td style="font-size: 12px">@photo.Description</td>
                    <td><img class="img" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(photo.Bytes))"></td>
                    <td>
                        <a onclick="Remove(@photo.Id, '@photo.BestResultId')" title="Delete" class="btn-form btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
