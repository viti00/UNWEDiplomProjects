@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@section Styles{
            <link rel="stylesheet" href="/css/AllCreateAndEditPages.css"/>
}
<div class="section">
    <div class="color-overlay"></div>
    <div class="wrapper col-sm-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">

        <div class="text-center mt-4 mb-4 name">
            <h3>@ViewData["Title"]</h3>
        </div>
        <partial name="_StatusMessage" for="StatusMessage" />
        <div class="row">
            <div>
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div class="logo mb-5">
                        <img src="~/lib/Images/logo.png" alt="">
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-2">
                        <input asp-for="Username" class="form-control" disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.File" class="form-control"style="font-size: 12px" type="file">
                        <label asp-for=Input.File class="form-label" style="font-size: 14px">Profile picture</label>
                        <span asp-validation-for="Input.File" class="small text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class=" custom-btn w-100 btn btn-lg btn-primary" style="color:black">Save</button>
                    <div>
                        <a asp-page="ChangePassword" style="color: black">Change Password</a>
                    </div>
                    <div>
                        <a asp-page="DeletePersonalData" style="color: black">Delete Account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
