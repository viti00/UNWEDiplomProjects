@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
@section Styles{
   <link rel="stylesheet" href="/css/AllCreateAndEditPages.css"/>
}
<div class="section">
    <div class="color-overlay"></div>
    <div class="wrapper col-sm-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <div class="text-center mt-4 mb-4 name">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="logo mb-5">
            <img src="~/lib/Images/logo.png" alt="">
        </div>
        <div class="alert alert-warning" role="alert">
             <p>
                 <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
             </p>
        </div>
        <div>
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (Model.RequirePassword)
                        {
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        }
                <button class="w-100 btn btn-lg btn-danger" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
