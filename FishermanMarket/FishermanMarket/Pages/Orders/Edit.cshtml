@page
@model FishermanMarket.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}
@section Styles{
    <link rel="stylesheet" href="/css/BodyColor.css" />
}

<div class="row">
    <div class="col-md-4 offset-md-4" style="background-color: mediumseagreen;border-radius: 10px;">
        <form method="post">
            <div class="text-center">
                <h5>Редактиране на информация за поръчка</h5>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.Id" />
            <div class="form-group" hidden>
                <label asp-for="Order.Status" class="control-label"></label>
                <input asp-for="Order.Status" class="form-control" />
                <span asp-validation-for="Order.Status" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Order.UserId" class="control-label"></label>
                <input asp-for="Order.UserId" class="form-control" value="@ViewBag.UserId"/>
                <span asp-validation-for="Order.UserId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Order.BagId" class="control-label"></label>
                <input asp-for="Order.BagId" class="form-control" />
                <span asp-validation-for="Order.BagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.FirstName" class="control-label">Име</label>
                <input asp-for="Order.FirstName" class="form-control" />
                <span asp-validation-for="Order.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.LastName" class="control-label">Фамилия</label>
                <input asp-for="Order.LastName" class="form-control" />
                <span asp-validation-for="Order.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.PhoneNumber" class="control-label">Телефон</label>
                <input asp-for="Order.PhoneNumber" class="form-control" />
                <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.DeliveryAddres" class="control-label">Адрес за доставка</label>
                <input asp-for="Order.DeliveryAddres" class="form-control" />
                <span asp-validation-for="Order.DeliveryAddres" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Order.LastModified_19118062" class="control-label"></label>
                <input asp-for="Order.LastModified_19118062" class="form-control" />
                <span asp-validation-for="Order.LastModified_19118062" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3 mb-3">
                <input style="background-color: yellowgreen; color: black" type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
