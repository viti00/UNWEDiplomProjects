@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles{
    <link rel="stylesheet" href="/css/BodyColor.css" />
}

<div class="row">
    <div class="col-md-4 offset-md-4" style="background-color: mediumseagreen;border-radius: 10px;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="text-center">
                <h5>Регистрация</h5>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-4 mt-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Имейл</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4 mt-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Парола</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4 mt-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Повтори парола</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center mb-4 mt-3">
                <button style="background-color: yellowgreen; color: black" id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Регистрация</button>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
