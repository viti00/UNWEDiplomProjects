@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section Styles{
    <link rel="stylesheet" href="/css/BodyColor.css" />
}

<div class="row">
    <div class="col-md-4 offset-md-4" style="background-color: mediumseagreen;border-radius: 10px;">
        <section>
            <form id="account" method="post">
                <div class="text-center">
                    <h5>Влизане</h5>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-4 mt-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Имейл</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 mt-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="text-center mb-4 mt-3">
                    <button style="background-color: yellowgreen; color: black" id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Влизане</button>
                </div>
               
            </form>
        </section>
    </div>
 </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
