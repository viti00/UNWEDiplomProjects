@page
@model LoginModel

@{
    ViewData["Title"] = "Влизане";
}


<div class="row mt-5">
    <div class="col-md-4 offset-md-4" style="border-radius: 5px; border: 1px solid white; padding: 15px;">
        <section>
            <form id="account" method="post">
                <h2 class="text-center text-light">@ViewData["Title"]</h2>
                <hr style="color: white !important"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-3 mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Имейл</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="mb-3 text-center">
                    <button id="login-submit" type="submit" class="btn" style="background-color: yellow; color: black;">Влез</button>
                </div>
                <div class="text-center">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Нямаш акаунт?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
